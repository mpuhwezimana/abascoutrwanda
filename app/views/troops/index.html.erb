<p id="notice"><%= notice %></p>

<h1>Troops</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Address</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>Contacts</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @troops.each do |troop| %>
      <tr>
        <td><%= troop.name %></td>
        <td><%= troop.image %></td>
        <td><%= troop.address %></td>
        <td><%= troop.longitude %></td>
        <td><%= troop.latitude %></td>
        <td><%= troop.contacts %></td>
        <td><%= link_to 'Show', troop %></td>
        <td><%= link_to 'Edit', edit_troop_path(troop) %></td>
        <td><%= link_to 'Destroy', troop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

